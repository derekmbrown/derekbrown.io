---
import Main from '../../layouts/Main.astro'

const allNotes = await Astro.glob('./../notes/*.md')
const tags = [...new Set(allNotes.map((note) => note.frontmatter.tags).flat())]
tags.sort()
---

<Main 
  PageName="Tags"
  TabTitle="Tags",
  MetaTitle="Derek Brown", 
  MetaDescription="Developer profile, portfolio and website of Derek Brown.", 
  MetaTag="website", 
  MetaUrl="https://derekbrown.io"
>
  <div class="flex flex-wrap">
    {tags.map(tag => (
      <div class="bg-[#1E262F] px-4 py-3 mr-3 rounded-lg text-lg">
        <a href={`/tags/${tag}`} class="hover:underline">
          {tag}
        </a>
      </div>
    ))}
  </div>
</Main>

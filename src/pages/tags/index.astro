---
import Main from '../../layouts/Main.astro'

const allNotes = await Astro.glob('./../notes/*.md')
const tags = [...new Set(allNotes.map((note) => note.frontmatter.tags).flat())]
tags.sort()
---

<Main 
  PageName="Tags"
  TabTitle="Tags",
  MetaTitle="Derek Brown", 
  MetaDescription="Developer profile, portfolio and website of Derek Brown.", 
  MetaTag="website", 
  MetaUrl="https://derekbrown.io"
>
  <div class="flex flex-wrap font-medium">
    {tags.map(tag => (
      <a href={`/tags/${tag}`} class="mr-3 border-2 rounded-md px-2 py-1 border-black font-medium">
        {tag}
      </a>
    ))}
  </div>
</Main>

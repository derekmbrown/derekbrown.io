---
import Main from '../../layouts/Main.astro'
import { getCollection } from 'astro:content'

const allNotes = await getCollection('notes')
const tags = [...new Set(allNotes.map((note) => note.data.tags).flat())]
tags.sort()
---

<Main 
  PageName="Tags"
  TabTitle="Tags",
  MetaTitle="Derek Brown", 
  MetaDescription="Developer profile, portfolio and website of Derek Brown.", 
  MetaTag="website", 
  MetaUrl="https://derekbrown.io"
>
  <div class="flex flex-wrap gap-y-3">
    {tags.map(tag => (
      <div class="bg-[#1E262F] px-4 py-2 mr-3 rounded-lg text-lg">
        <a href={`/tags/${tag}`}>
          {tag}
        </a>
      </div>
    ))}
  </div>
</Main>
